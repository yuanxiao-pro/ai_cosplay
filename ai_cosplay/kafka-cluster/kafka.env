# Kafka 集群环境配置文件

# 集群基础配置
KAFKA_VERSION=3.6.1
SCALA_VERSION=2.13
CLUSTER_ID=enterprise-kafka-cluster-001

# 网络配置
KAFKA_NETWORK_SUBNET=172.20.0.0/16

# 端口配置
KAFKA1_CLIENT_PORT=19092
KAFKA1_CONTROLLER_PORT=19093
KAFKA1_JMX_PORT=19999

KAFKA2_CLIENT_PORT=29092
KAFKA2_CONTROLLER_PORT=29093
KAFKA2_JMX_PORT=29999

KAFKA3_CLIENT_PORT=39092
KAFKA3_CONTROLLER_PORT=39093
KAFKA3_JMX_PORT=39999

KAFKA4_CLIENT_PORT=49092
KAFKA4_CONTROLLER_PORT=49093
KAFKA4_JMX_PORT=49999

KAFKA5_CLIENT_PORT=59092
KAFKA5_CONTROLLER_PORT=59093
KAFKA5_JMX_PORT=59999

# UI和监控端口
KAFKA_UI_PORT=8080
KAFKA_EXPORTER_PORT=9308

# 性能配置
KAFKA_HEAP_OPTS=-Xmx2g -Xms2g
KAFKA_JVM_PERFORMANCE_OPTS=-server -XX:+UseG1GC -XX:MaxGCPauseMillis=20 -XX:InitiatingHeapOccupancyPercent=35 -XX:+ExplicitGCInvokesConcurrent -XX:MaxInlineLevel=15 -Djava.awt.headless=true

# 日志配置
KAFKA_LOG_RETENTION_HOURS=168
KAFKA_LOG_RETENTION_BYTES=1073741824
KAFKA_LOG_SEGMENT_BYTES=1073741824

# 集群配置
DEFAULT_REPLICATION_FACTOR=3
MIN_INSYNC_REPLICAS=2
NUM_PARTITIONS=6

# 时区配置
TZ=Asia/Shanghai 